<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DonationApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/PrimaryColor</item>
        <item name="colorPrimaryVariant">@color/PrimaryColorlow</item>
        <item name="colorOnPrimary">@color/PrimaryText</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/PrimaryText</item>
        <item name="colorSecondaryVariant">@color/SecondaryText</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:titleTextColor">@color/PrimaryText</item>
        <item name="android:textSize">32sp</item>
        <item name="title">Donation</item>

    </style>
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:colorBackground">@color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>