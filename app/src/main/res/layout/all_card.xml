<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/thirdColor"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/child2" />
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
                <ImageView
                    android:id="@+id/Flag"
                    android:layout_width="20dp"
                    android:layout_height="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/syria"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Reconstruction of children's schools"
                    android:textAlignment="textStart"
                    android:textColor="@color/PrimaryText"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    app:cardBackgroundColor="@color/thirdText"
                    app:cardCornerRadius="100dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/SliderPercent"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/PrimaryColor"
                        app:cardCornerRadius="100dp" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:text="Target :"
                    android:textSize="10sp"
                    android:textColor="@color/PrimaryText"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_gravity="center|start"
                    android:gravity="center|start" />
                <TextView
                    android:id="@+id/TargetPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="230000"
                    android:textSize="12sp"
                    android:textColor="@color/PrimaryColor"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"
                    android:paddingStart="5dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DZD"
                    android:textSize="10sp"
                    android:textColor="@color/PrimaryColor"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingStart="2dp"/>
                <TextView
                    android:id="@+id/TargetPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65%"
                    android:textSize="10sp"
                    android:textColor="@color/PrimaryColor"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_gravity="center|end"
                    android:gravity="center|end"
                    android:paddingStart="5dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            </LinearLayout>





        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>