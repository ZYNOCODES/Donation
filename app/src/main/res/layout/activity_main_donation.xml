<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainDonationActivity">

    <FrameLayout
        android:id="@+id/DonationFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp"
        android:elevation="10dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/DonationHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/DonationHome_ic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/donation"
                    android:padding="2dp"
                    app:tint="@color/PrimaryColor"/>
                <TextView
                    android:id="@+id/DonationHome_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donation"
                    android:textSize="10sp"
                    android:textColor="@color/PrimaryColor"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/MyDonation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/MyDonation_ic"
                    android:layout_width="30dp"
                    android:layout_height="26dp"
                    android:padding="3dp"
                    android:src="@drawable/mydonation"
                    app:tint="@color/SecondaryText" />
                <TextView
                    android:id="@+id/MyDonation_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My donation"
                    android:textSize="10sp"
                    android:textColor="@color/SecondaryText"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/Account_ic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/user"
                    android:padding="3dp"
                    app:tint="@color/SecondaryText"/>
                <TextView
                    android:id="@+id/Account_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textSize="10sp"
                    android:textColor="@color/SecondaryText"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_bold" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>